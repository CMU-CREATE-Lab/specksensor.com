<script language="JavaScript" type="text/javascript">
   $(document).ready(function() {
      $("#login_email").focus();
   });
</script>
<div class="row">
   <div class="col-sm-2 col-md-3"></div>
   <div class="col-sm-8 col-md-6">
      <h2>Log in</h2>
      <div class="page_instructions">
         Welcome to Speck.
         Need an account? <a href="/signup">Sign up!</a>
      </div>
      <form id="login_form" onsubmit="return submitLoginForm('login_form','login_email','login_password','login_messages','{{{redirectToAfterLogin}}}');return false;">
         <div id="login_messages" class="form_messages alert alert-danger"></div>
         <div class="form-group">
            <input type="email" class="form-control input-lg" id="login_email" name="login_email" placeholder="Email address"/>
         </div>
         <div class="form-group">
            <input type="password" class="form-control input-lg" id="login_password" name="login_password" placeholder="Password"/>
         </div>
         <div class="form-group">
            <button type="submit" class="btn btn-primary pull-right">Log In</button>
            <a href="/password-reset">Forgot your password?</a>
         </div>
      </form>
   </div>
   <div class="col-sm-2 col-md-3"></div>
</div>